    </head>
    <body>
        {% block body %}
            {% include 'header.html.twig' %}
            <main>
                {% block lista %}{% endblock %}
                {% block detalle %}{% endblock %}
            </main>
        {% endblock %}
    </body>
    {% block javascript %}{% endblock %}
